{
	"extends": [
		"config:base",
		"group:allNonMajor",
		"schedule:nonOfficeHours",
		":disableRateLimiting",
		":automergeMinor",
		":automergeBranch"
	],
	"timezone": "America/New_York",
	"semanticCommits": "enabled",
	"labels": [
		"renovate",
		"dependencies"
	],
	"lockFileMaintenance": {
		"automerge": true,
		"enabled": true,
		"semanticCommitType": "build",
		"semanticCommitScope": "lockfile",
		"commitBody": "[skip ci]"
	},
	"packageRules": [
		{
			"matchPackageNames": [
				"node"
			],
			"matchUpdateTypes": [
				"major"
			],
			"semanticCommitType": "build",
			"semanticCommitScope": "global"
		},
		{
			"matchPackageNames": [
				"pnpm"
			],
			"semanticCommitType": "build",
			"semanticCommitScope": "skip-release"
		},
		{
			"matchDepTypes": [
				"dependencies",
				"require"
			],
			"semanticCommitType": "build",
			"semanticCommitScope": "deps"
		},
		{
			"matchDepTypes": [
				"devDependencies"
			],
			"semanticCommitType": "build",
			"semanticCommitScope": "devDeps"
		},
		{
			"groupName": "GitHub workflow packages",
			"matchPaths": [
				".github/**"
			],
			"semanticCommitType": "ci",
			"semanticCommitScope": "skip-release"
		}
	],
	"pin": {
		"commitBody": "[skip ci]"
	}
}
