{
	"extends": [
		":automergeBranch",
		":automergeMinor",
		":dependencyDashboard",
		":disableRateLimiting",
		":pinVersions",
		":ignoreModulesAndTests",
		"group:monorepos",
		"group:recommended",
		"replacements:all",
		"workarounds:all"
	],
	"pin": {
		"ignoreTests": true,
		"commitBody": "[skip ci]"
	},
	"labels": ["renovate", "dependencies"],
	"timezone": "America/New_York",
	"schedule": ["before 8am"],
	"packageRules": [
		{
			"matchPackagePatterns": ["*"],
			"semanticCommitType": "chore"
		},
		{
			"matchDepTypes": ["dependencies", "require", "devDependencies"],
			"semanticCommitScope": "devDeps"
		},
		{
			"matchFileNames": [".github/**"],
			"semanticCommitScope": "ci",
			"groupName": "GitHub workflow updates"
		}
	]
}
